<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/value100"
    android:layout_margin="@dimen/value3">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/value100"
        android:layout_marginBottom="@dimen/value10"
        android:background="@drawable/background_cardview"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPictureLoveSong"
            android:layout_width="@dimen/value110"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/value5"
            android:layout_marginStart="@dimen/value5"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/tvNameLoveSong"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value100"
            android:layout_marginLeft="@dimen/value5"
            android:layout_marginStart="@dimen/value5"
            android:layout_marginTop="@dimen/value10"
            android:lines="3"
            android:textColor="#fff" />
    </LinearLayout>

</android.support.v7.widget.CardView>