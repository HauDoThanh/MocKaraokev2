<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_xam"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context=".Actitivy.Act_Login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/value250"
        android:layout_marginTop="@dimen/value50"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo_mockaraoke" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="@dimen/value200"
        android:layout_height="@dimen/value50"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/value50"
        android:textSize="@dimen/textSize20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false">

        <Button
            android:id="@+id/button_skip_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/value10"
            android:background="#00000000"
            android:onClick="xxx"
            android:text="@string/slogan"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize20"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
